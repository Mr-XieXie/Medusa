<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_photo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:src="@mipmap/ic_launcher_round" />
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/profile_photo"
                    android:gravity="center_vertical"
                    android:text="用户名"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/img_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/text_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Greyhound divisively hello coldly wonderfully marginally far upon excluding."/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mainGray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/button_like"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/icon_like_blank"/>
                <ImageView
                    android:id="@+id/button_comment"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_toRightOf="@id/button_like"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/icon_comment"/>
                <ImageView
                    android:id="@+id/button_share"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_toRightOf="@id/button_comment"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/icon_share"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>